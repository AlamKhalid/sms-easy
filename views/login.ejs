<%- include('./partials/header.ejs')%>

<div
  class="modal fade"
  id="login"
  tabindex="-1"
  role="dialog"
  aria-labelledby="loginTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5
          class="modal-title text-center w-100 font-weight-bold"
          id="loginLongTitle"
        >
          LOGIN
        </h5>
        <button
          type="button"
          class="close text-danger"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="login-form" action="/login" method="post">
          <div class="input-container" id="user-container">
            <i class="fa fa-user icon" id="user-icon"></i>
            <input
              class="input-field"
              type="text"
              placeholder="Username"
              name="user"
              id="user"
            />
          </div>
          <label class="text-danger font-weight-bold d-none" id="user-label"
            >* must enter a username</label
          >
          <div class="input-container" id="pass-container">
            <i class="fa fa-lock icon" id="pass-icon"></i>
            <input
              class="input-field"
              type="password"
              placeholder="Password"
              name="pass"
              id="pass"
            />
          </div>
          <label class="text-danger font-weight-bold d-none" id="pass-label"
            >* must enter a password</label
          >
          <hr />
          <button class="btn btn-dark w-100 font-weight-bold">LOGIN</button>
        </form>
        <button
          class="btn btn-outline-dark mt-2 w-100 font-weight-bold"
          data-toggle="modal"
          data-target="#register"
          data-dismiss="modal"
        >
          DON'T HAVE AN ACCOUNT? REGISTER!
        </button>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs')%>
