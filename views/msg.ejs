<%- include('./partials/header.ejs')%>
<nav class="navbar fixed-top navbar-dark bg-dark">
  <a class="navbar-brand text-center" href="/"
    ><i class="fa fa-envelope" aria-hidden="true"></i> SMS Easy</a
  >
</nav>

<section class="content mb-4">
  <div class="container text-center">
    <div class="alert alert-danger d-none" role="alert"></div>
    <p id="noteForSMS">
      <strong>Note:</strong> For multiple recepients, click the top<em>To</em>
      bar once before sending.
    </p>

    <input id="fileToUpload" type="file" hidden />
    <button id="uploadBtn" class="btn btn-msg mb-4 font-weight-bold">
      <i class="fa fa-plus" aria-hidden="true"></i> Import File
    </button>

    <div class="options d-flex justify-content-around">
      <label id="via"><strong>via: </strong></label>
      <div>
        <input
          type="radio"
          name="format"
          checked="checked"
          value="sms"
          id="smsBox"
        /><label class="option" for="smsBox">SMS</label>
      </div>
      <div>
        <input type="radio" name="format" id="emailBox" value="email" /><label
          class="option"
          for="emailBox"
          >Email</label
        >
      </div>
    </div>

    <input type="text" placeholder="Subject" id="subject" class="d-none" />
    <textarea class="mt-3" placeholder="Type your message here"></textarea>

    <a href="" id="sendBtn"
      ><button class="btn btn-msg mt-4 font-weight-bold">
        <i class="fa fa-paper-plane" aria-hidden="true"></i> Send
      </button></a
    >
  </div>
</section>
<%- include('./partials/footer.ejs')%>
