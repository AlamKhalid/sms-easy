<%- include('./partials/header.ejs')%>

<div
  class="modal fade"
  id="register"
  tabindex="-1"
  role="dialog"
  aria-labelledby="registerTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5
          class="modal-title text-center w-100 font-weight-bold"
          id="registerLongTitle"
        >
          REGISTER
        </h5>
        <button
          type="button"
          class="close text-danger"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="register-form" action="/register" method="post">
          <div class="input-container" id="r-user-container">
            <i class="fa fa-user icon" id="r-user-icon"></i>
            <input
              class="input-field"
              type="text"
              placeholder="Username"
              id="r-user"
              name="username"
            />
          </div>
          <label class="text-danger font-weight-bold d-none" id="r-user-label"
            >* must provide a username</label
          >
          <div class="input-container" id="r-email-container">
            <i class="fa fa-envelope-o icon" id="r-email-icon"></i>
            <input
              class="input-field"
              type="email"
              id="r-email"
              placeholder="Email"
              name="email"
            />
          </div>
          <label class="text-danger font-weight-bold d-none" id="r-email-label"
            >* must provide an email</label
          >
          <div class="input-container" id="r-pass-container">
            <i class="fa fa-lock icon" id="r-pass-icon"></i>
            <input
              class="input-field"
              type="password"
              placeholder="Password"
              name="pass"
              id="r-pass"
            />
          </div>
          <label class="text-danger font-weight-bold d-none" id="r-pass-label"
            >* must provide a password</label
          >
          <div class="input-container" id="r-cpass-container">
            <i class="fa fa-lock icon" id="r-cpass-icon"></i>
            <input
              class="input-field"
              type="password"
              placeholder="Confirm Password"
              name="cpass"
              id="r-cpass"
            />
          </div>
          <label class="text-danger font-weight-bold d-none" id="r-cpass-label"
            >* must provide a confirm password</label
          >
          <hr />
          <button type="submit" class="btn btn-dark w-100 font-weight-bold">
            REGISTER
          </button>
        </form>
        <button
          class="btn btn-outline-dark mt-2 w-100 font-weight-bold"
          data-toggle="modal"
          data-target="#login"
          data-dismiss="modal"
        >
          ALREADY HAVE AN ACCOUNT? LOGIN!
        </button>
      </div>
    </div>
  </div>
</div>
<%- include('./partials/footer.ejs')%>
